---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';

const posts = (await getCollection('blog'))
	.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
	.slice(0, 3);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: 960px;
				max-width: calc(100% - 2em);
				margin: auto;
			}

			/* ── Hero ── */
			.hero {
				padding: 4em 1em 3em;
				text-align: center;
				border-bottom: 1px solid rgb(var(--gray-light));
				margin-bottom: 3em;
			}
			.lang-switcher {
				font-size: 0.85em;
				margin-bottom: 2em;
				color: rgb(var(--gray));
			}
			.lang-switcher a {
				color: rgb(var(--accent));
				text-decoration: none;
				padding: 0 0.4em;
			}
			.lang-switcher a:hover {
				text-decoration: underline;
			}
			.hero-tagline {
				font-size: clamp(2rem, 5vw, 3.2rem);
				font-weight: 800;
				line-height: 1.15;
				margin: 0 0 0.6em;
				color: rgb(var(--black));
			}
			.hero-tagline em {
				font-style: normal;
				color: rgb(var(--accent));
			}
			.hero-sub {
				font-size: 1.1em;
				color: rgb(var(--gray));
				max-width: 560px;
				margin: 0 auto;
				line-height: 1.7;
			}

			/* ── Latest Posts ── */
			.section-header {
				display: flex;
				align-items: baseline;
				justify-content: space-between;
				margin-bottom: 1.5em;
				padding: 0 0.5em;
			}
			.section-header h2 {
				margin: 0;
				font-size: 1rem;
				text-transform: uppercase;
				letter-spacing: 0.1em;
				color: rgb(var(--gray));
			}
			.section-header a {
				font-size: 0.9em;
				color: rgb(var(--accent));
				text-decoration: none;
			}
			.section-header a:hover {
				text-decoration: underline;
			}

			/* ── Post grid ── */
			.post-grid {
				display: grid;
				grid-template-columns: repeat(3, 1fr);
				gap: 2rem;
				list-style: none;
				margin: 0;
				padding: 0;
			}
			.post-grid li a {
				display: block;
				text-decoration: none;
				color: inherit;
			}
			.post-grid li img {
				width: 100%;
				border-radius: 10px;
				margin-bottom: 0.75em;
				aspect-ratio: 16/9;
				object-fit: cover;
				transition: box-shadow 0.2s ease;
			}
			.post-grid li a:hover img {
				box-shadow: var(--box-shadow);
			}
			.post-title {
				margin: 0 0 0.3em;
				font-size: 1.05em;
				line-height: 1.3;
				color: rgb(var(--black));
				transition: color 0.2s ease;
			}
			.post-grid li a:hover .post-title {
				color: rgb(var(--accent));
			}
			.post-description {
				font-size: 0.88em;
				color: rgb(var(--gray));
				line-height: 1.5;
				margin: 0 0 0.6em;
				display: -webkit-box;
				-webkit-line-clamp: 3;
				-webkit-box-orient: vertical;
				overflow: hidden;
			}
			.post-meta {
				display: flex;
				gap: 0.75em;
				font-size: 0.8em;
				color: rgb(var(--gray));
			}
			.post-author {
				color: rgb(var(--accent));
				font-weight: 600;
			}

			@media (max-width: 720px) {
				.hero {
					padding: 2.5em 0.5em 2em;
				}
				.post-grid {
					grid-template-columns: 1fr;
					gap: 1.5rem;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>

			<section class="hero">
				<div class="lang-switcher">
					<strong>EN</strong> |
					<a href="/zh-hant/blog">繁</a> |
					<a href="/zh-hans/blog">简</a> |
					<a href="/ar/blog">عر</a>
				</div>
				<h1 class="hero-tagline">
					Food is not just fuel.<br />
					It's <em>memory, culture,<br />medicine, and joy</em> —<br />
					all on one plate.
				</h1>
				<p class="hero-sub">
					Empowerment eating for the curious, the hungry, and anyone who ever ate a bowl of something alone on a Tuesday and felt completely fine about it.
				</p>
			</section>

			<section>
				<div class="section-header">
					<h2>Latest Posts</h2>
					<a href="/blog">All posts →</a>
				</div>
				<ul class="post-grid">
					{posts.map((post) => (
						<li>
							<a href={`/blog/${post.id}/`}>
								{post.data.heroImage && (
									<Image width={600} height={338} src={post.data.heroImage} alt="" />
								)}
								<h3 class="post-title">{post.data.title}</h3>
								<p class="post-description">{post.data.description}</p>
								<div class="post-meta">
									<span class="post-author">{post.data.author}</span>
									<span>·</span>
									<FormattedDate date={post.data.pubDate} />
								</div>
							</a>
						</li>
					))}
				</ul>
			</section>

		</main>
		<Footer />
	</body>
</html>
